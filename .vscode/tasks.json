{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Flask Development Server Development Environment",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "server.py"
            ],
            "options": {
                "env": {
                    "ENV_FILE": ".env.dev"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Flask Development Server Production Environment",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "server.py"
            ],
            "options": {
                "env": {
                    "ENV_FILE": ".env"
                }
            },
            "group": {
                "kind": "build"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Setup Development Environment",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "pip",
                "install",
                "-r",
                "requirements.txt"
            ],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Start Production Server (Gunicorn)",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "gunicorn",
                "--bind",
                "0.0.0.0:5001",
                "--workers",
                "4",
                "wsgi:app"
            ],
            "options": {
                "env": {
                    "ENV_FILE": ".env"
                }
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": []
        },
        {
            "label": "Docker Compose: Build and Run",
            "type": "shell",
            "command": "docker",
            "args": [
                "compose",
                "up",
                "--build"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": []
        },
        {
            "label": "Podman Compose: Build and Run",
            "type": "shell",
            "command": "podman-compose",
            "args": [
                "up",
                "--build"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": []
        },
        {
            "label": "Podman: Build Image",
            "type": "shell",
            "command": "podman",
            "args": [
                "build",
                "-f",
                "Containerfile",
                "-t",
                "tasmota-updater:latest",
                "."
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Docker: Build Image",
            "type": "shell",
            "command": "docker",
            "args": [
                "build",
                "-f",
                "Containerfile",
                "-t",
                "tasmota-updater:latest",
                "."
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}
